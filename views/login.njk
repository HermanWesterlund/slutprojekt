{% block content %}
<main>
  <head>
    <link rel="stylesheet" href="/css/style.css" id="mode">
    <link rel="stylesheetalt" href="/css/altStyle.css">
    </head>
  <body>
    <div class="topbar" id="item4">
      <h1>Logga in <img src="/img/channels4_profile.jpg" alt="enrico" id="button" width="50vh"></h1>
  </div>
  <div class="shadow">-</div>

  <div class="center">
    <p id="toggled" style="font-size: medium;">Its_Henrico mode on</p>
    <script>
        var henricoMode = true
        document.getElementById("button").addEventListener("click", toggleMode);
        function toggleMode() {
            if (henricoMode == true) {
                document.getElementById("mode").href = "/css/altStyle.css";
                document.getElementById("toggled").textContent = "Its_Henrico mode off"
                henricoMode = false;
            }
            else {
                document.getElementById("mode").href = "/css/style.css";
                document.getElementById("toggled").textContent = "Its_Henrico mode on"
                henricoMode = true;
            }
        }
        </script>
        <div class="container3">
          <form class="items2" action="/check" method="POST" autocomplete="off">
            <label for="name">Name</label>
            <input type="text" name="name" id="name">
            <label for="name">Password</label>
            <input type="text" name="password" id="password" style="-webkit-text-security: square">
            <button id="login" type="submit">Logga in</button>
          </form>
        </div>
  </body>
</main>
{% endblock %}